<div class="ui segment">
  <h3>Mailbox</h3>

  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == session[:current_user_id]|| conversation.recipient_id == session[:current_user_id] %>
          <% if conversation.sender_id == session[:current_user_id] %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <%= link_to recipient.name, conversation_messages_path(conversation)%>         <br>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

