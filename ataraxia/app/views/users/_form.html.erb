<html>
<head>
  <title></title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <style type="text/css">
    body{
    padding-top: 120px;

    background: url(/LogoConLetras.png);

    background-size: cover;
    background-repeat: no-repeat;
  }

  .jumbotron{
    opacity: 0.8;

  }


  }

.jumbotron .h1, .jumbotron h1{
    text-align: center;
    color:  #0080ff;
    font-size: 10px;
  }

  </style>
</head>
<body>


<%= render 'shared/navbar' %>




 <!-- Forma -->

<%= form_for :user, url: users_create_path do |f| %>
  <div class="form-group jumbotron container">
      <h1 id="h1T">Bienvenido, introduce tus datos para crear tu cuenta</h1>
   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <div class="row">

        <div class="col-lg-6">
          <p>
            <%= f.label :name %><br>
            <%= f.text_field :name, required: true %>
          </p>
          <p>
            <%= f.label :age %><br>
            <%= f.text_field :age, required: true %>
          </p>
           <p>
            <%= f.label :email %><br>
            <%= f.text_field :email, required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
            </p>
        </div>
        <div class="col-lg-6">
          <p>
            <%= f.radio_button :gender, "0" , required: true%>
            <%= label_tag(:gender_female, "Female")%>
            <%= f.radio_button :gender, "1"%>
            <%= label_tag(:gender_male, "Male", required: true)%>
          </p>
          <p>
            <%= f.label :phone %><br>
            <%= f.text_field :phone, required: true %>
          </p>
          <p>
            <%= f.label :password %><br>
            <%= password_field(:user, :password, size: 20) %>
          </p>
        </div>

      </div>

      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">

 <p>
          <%= f.submit %>
          </p>
          <% end %>
        </div>
        <div class="col-lg-4"></div>


      </div>






</div>


</body>
</html>





