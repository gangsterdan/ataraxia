<html>
<head>
  <title></title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <style type="text/css">
    body{
    padding-top: 120px;
    background: url(/LogoConLetras.png);
    
    background-size: cover;
    background-repeat: no-repeat;
  }
  .jumbotron{
    opacity: 0.8;
    width: 25% 25%;
    font-size: 2em;
  }
  #h1T{
    text-align: center;
    color:  #0080ff;
    font-size: 120%;
  }
  </style>
</head>
<body>
  <!-- Jumbotron -->
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navBar" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
           </button>
        <a href="/home/index" class="navbar-brand"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Ataraxia</a>
      </div>
      <div class="collapse navbar-collapse" id="navBar">
        <ul class="nav navbar-nav">
          <li><a href="#"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>Buscar</a></li>
          <li><a href="#"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Mensajes</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/users/new">Sign Up</a></li>
          <li><a href="#">Sign in</a></li>
        </ul>
      </div>
    </div>
  </nav>




  <!-- Forma -->

<form>
  <div class="form-group jumbotron container">
      <h1 id="h1T">Bienvenido, introduce tus datos para crear tu cuenta</h1>
   <div class="row"> 
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <div class="row">
        <%= form_for :user, url: users_create_path do |f| %>
        <div class="col-lg-6">
          <p>
            <%= f.label :name %><br>
            <%= f.text_field :name, required: true %>
          </p>
          <p>
            <%= f.label :age %><br>
            <%= f.text_field :age, required: true %>
          </p>
           <p>
            <%= f.label :email %><br>
            <%= f.text_field :email, required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
            </p>
        </div>
        <div class="col-lg-6">
          <p>
            <%= f.radio_button :gender, "0" , required: true%>
            <%= label_tag(:gender_female, "Female")%>
            <%= f.radio_button :gender, "1"%>
            <%= label_tag(:gender_male, "Male", required: true)%>
          </p>
          <p>
            <%= f.label :phone %><br>
            <%= f.text_field :phone, required: true %>
          </p>
          <p>
            <%= f.label :password %><br>
            <%= password_field(:user, :password, size: 20) %>
          </p>
        </div>
       
      </div>

      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <p>
                <%= f.submit %>
          </p>
          <% end %>

        </div>
        <div class="col-lg-4"></div>

               
      </div>






</div>
</form>

</body>
</html>





