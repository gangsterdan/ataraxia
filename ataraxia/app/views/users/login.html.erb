<body>
  
<%= render 'shared/navbar' %>


<!-- LOGIN FORM -->

<h1>Log in</h1>

<%= form_for :user, url: users_login_path do |f|%>
  <div class="form-group jumbotron container">
      <h1 id="h1T">Bienvenido, introduce tus datos para iniciar sesi√≥n</h1>
   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <div class="row">

        <div class="col-lg-6">
           <p>
            <%= f.label :email %><br>
            <%= f.text_field :email, required: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
            </p>
            <p>
              <%= f.label :password %><br>
              <%= password_field(:user, :password, size: 20) %>
            </p>
        </div>

      </div>

      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">

 <p>
          <%= f.submit %>
          </p>
          <% end %>



    <p>Nuevo usuario? <%= link_to 'Crea tu cuenta!', users_new_path %></p>
